@{
    ViewData["Title"] = "Usuarios";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mt-5 mb-4">Opciones de Usuario</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center mb-4">
                <div class="card-body btn-group-vertical" role="group">
                    <form asp-controller="Usuario" asp-action="BuscarUsuarioPorNombre" method="get" class="w-100">
                        <div class="input-group mb-3">
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre de usuario"
                                aria-label="Nombre de usuario" aria-describedby="button-addon2">
                            <button class="btn btn-primary" type="submit" id="button-addon2"><i
                                    class="fas fa-search"></i></button>
                        </div>
                    </form>

                    <a asp-controller="Usuario" asp-action="CrearUsuario"
                        class="list-group-item list-group-item-action bg-success text-white mb-3"><i
                            class="fas fa-user-plus me-2"></i>Crear Nuevo Usuario</a>

                    <a asp-controller="Usuario" asp-action="MostrarTodosUsuarios"
                        class="list-group-item list-group-item-action bg-primary text-white ">
                        <i class="fas fa-users me-2"></i>Mostrar Todos los Usuarios
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>