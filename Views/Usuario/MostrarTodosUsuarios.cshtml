@model ListarUsuariosViewModel
@using tl2_tp10_2023_VarelaJoseAlberto.ViewModels
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-3 d-flex justify-content-between align-items-center">
                <div>
                    <a asp-controller="Usuario" asp-action="CrearUsuario" class="btn btn-primary">
                        <i class="fas fa-user-plus me-1"></i> Crear Usuario
                    </a>
                </div>
                <div>
                    <a asp-controller="Usuario" asp-action="MostrarTodosUsuarios" class="btn btn-secondary">
                        <i class="fas fa-list me-1"></i> Mostrar Todos los Usuarios
                    </a>
                </div>
                <div class="input-group w-50">
                    <form asp-controller="Usuario" asp-action="BuscarUsuarioPorNombre" method="get">
                        <div class="input-group">
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre de usuario"
                                aria-label="Nombre de usuario" aria-describedby="button-addon2">
                            <button class="btn btn-primary" type="submit" id="button-addon2"><i
                                    class="fas fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        @* <th scope="col" style="visibility: hidden;">Id</th> *@
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Contrase√±a</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.ListaUsuariosVM)
                    {
                        <tr>
                            @* <th scope="row" style="visibility: hidden;">@usuario.IdUsuarioVM</th> *@
                            <td>@usuario.IdUsuarioVM</td>
                            <td>@usuario.NombreDeUsuarioVM</td>
                            <td>@usuario.ContraseniaVM</td>
                            <td>@usuario.RolVM</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Opciones">
                                    <a asp-controller="Usuario" asp-action="ModificarUsuario" class="btn btn-info"
                                        asp-route-idUsuario="@usuario.IdUsuarioVM">
                                        <i class="fas fa-edit me-1"></i>Editar</a>
                                    <a asp-controller="Usuario" asp-action="EliminarUsuario" class="btn btn-danger"
                                        asp-route-idUsuario="@usuario.IdUsuarioVM">
                                        <i class="fas fa-trash-alt me-1"></i>Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
