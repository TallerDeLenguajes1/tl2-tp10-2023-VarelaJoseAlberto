@model tl2_tp10_2023_VarelaJoseAlberto.ViewModels.CrearUsuarioViewModel
<h1>Crear Nuevo Usuario</h1>
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <form asp-controller="Usuario" asp-action="ConfirmarAgregarUsuario" method="post">
            <div class="mb-3">
                <label asp-for="@Model.NombreDeUsuario"></label>
                <input asp-for="@Model.NombreDeUsuario" class="form-control" />
                <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Contrasenia"></label>
                <input asp-for="@Model.Contrasenia" class="form-control" />
                <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Rol"></label>
                <select asp-for="@Model.Rol" class="form-select" asp-items="@Html.GetEnumSelectList<Rol>()">
                    <option selected disabled> ---Seleccionar--- </option>
                </select>
                <span asp-validation-for="@Model.Rol" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Agregar Usuario</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}