@using tl2_tp10_2023_VarelaJoseAlberto.ViewModels
@model tl2_tp10_2023_VarelaJoseAlberto.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - tl2_tp10_2023_VarelaJoseAlberto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tl2_tp10_2023_VarelaJoseAlberto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .input-group-text i {
            font-size: 1.2rem;
        }
    </style>
</head>

<body>
    <div class=" container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-4">
                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["Mensaje"]
                    </div>
                }
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Iniciar Sesión</h3>
                        <form asp-controller="Login" asp-action="Index" method="post">
                            <div class="mb-3">
                                <label asp-for="@Model.NombreDeUsuario" class="form-label">Nombre de Usuario</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" placeholder="Nombre de usuario"
                                        asp-for="@Model.NombreDeUsuario" />
                                    <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.Contrasenia" class="form-label">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control" placeholder="Contraseña"
                                        asp-for="@Model.Contrasenia" />
                                    <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {

        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>
