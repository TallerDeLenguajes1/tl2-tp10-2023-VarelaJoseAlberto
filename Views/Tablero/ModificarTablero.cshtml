@model tl2_tp10_2023_VarelaJoseAlberto.ViewModels.ModificarTableroViewModel
@{
    ViewData["Title"] = "Confirmar Modificación";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Confirmar Modificación</h2>
            <div>
                <p>¿Estás seguro de que quieres modificar el Tablero <strong>"@Model.NombreDeTablero"</strong>?</p>
            </div>
            <form asp-controller="Tablero" asp-action="ConfirmarModificarTablero" method="post">
                <fieldset>
                    <legend>Detalles del Tablero</legend>
                    <input asp-for="IdTablero" type="hidden" />
                    <div class="mb-3">
                        <label class="form-label" asp-for="NombreDeTablero">Nombre del Tablero</label>
                        <input type="text" class="form-control" asp-for="NombreDeTablero" />
                        <span asp-validation-for="NombreDeTablero" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="DescripcionDeTablero">Descripción del Tablero:</label>
                        <textarea asp-for="DescripcionDeTablero" class="form-control"></textarea>
                        <span asp-validation-for="DescripcionDeTablero" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-3">
                        <label class="input-group-text" asp-for="IdUsuarioPropietario">Propietario del tablero</label>
                        <select class="form-select" asp-for="IdUsuarioPropietario">
                            <option value="" selected disabled>--- Seleccionar ---</option>
                            @foreach (var tablero in Model.ListadoUsuarios!)
                            {
                                <option value="@tablero.IdUsuarioM">@tablero.NombreDeUsuarioM</option>
                            }
                        </select>
                        <span asp-validation-for="IdUsuarioPropietario" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-success">Actualizar</button>
                        <a asp-controller="Tablero" asp-action="MostrarTodosTablero"
                            class="btn btn-danger ms-2">Cancelar</a>
                    </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}