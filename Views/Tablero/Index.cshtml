@using tl2_tp10_2023_VarelaJoseAlberto.Repositorios
@{
    ViewData["Title"] = "Tablero";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mt-5 mb-4">Opciones de Tablero</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center mb-4">
                <div class="card-body btn-group-vertical" role="group">
                    @if (Autorizacion.EsAdmin(ViewContext.HttpContext))
                    {
                        <form asp-controller="Tablero" asp-action="BuscarTableroPorNombre" method="get" class="w-100">
                            <div class="input-group mb-3">
                                <input type="text" name="nombre" class="form-control " placeholder="Nombre del tablero"
                                    aria-label="Nombre del tablero" aria-describedby="button-addon2">
                                <button class="btn btn-primary" type="submit" id="button-addon2"><i
                                        class="fas fa-search"></i></button>
                            </div>
                        </form>

                        <a asp-controller="Tablero" asp-action="CrearTablero"
                            class="list-group-item list-group-item-action bg-success text-white mb-3"><i
                                class="fas fa-plus me-2"></i>Crear Tablero</a>

                        <a asp-controller="Tablero" asp-action="MostrarTodosTablero"
                            class="list-group-item list-group-item-action bg-primary text-white mb-3"><i
                                class="fas fa-list me-2"></i>Mostrar todas las Tableros</a>
                    }
                    <a asp-controller="Tablero" asp-action="ListarTablerosDeUsuarioEspecifico"
                        asp-route-idUsuario="@Autorizacion.ObtenerIdUsuario(ViewContext.HttpContext)"
                        class="list-group-item list-group-item-action bg-primary text-white">
                        <i class="fas fa-tasks me-2"></i>Mostrar Mis Tableros</a>
                </div>
            </div>
        </div>
    </div>
</div>