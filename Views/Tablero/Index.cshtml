@using tl2_tp10_2023_VarelaJoseAlberto.Repositorios
@model tl2_tp10_2023_VarelaJoseAlberto.ViewModels.UsuarioViewModel


<head>
    <meta charset="utf-8" />
    @{
        ViewData["Title"] = "Tablero";
    }
</head>

<body>
    <div class="text-start">
        <h2 class="text-center">Opciones de Tablero</h2>
        <ol>
            @if (Autorizacion.EsAdmin(ViewContext.HttpContext))
            {
                <li>
                    <a asp-controller="Tablero" asp-action="AgregarTablero">Crear Tablero</a>
                </li>
                <li>
                    <a asp-controller="Tablero" asp-action="MostrarTodosTablero">Mostrar Todos los Tablero</a>
                </li>
                <li>
                    <a asp-controller="Tablero" asp-action="ListarTablerosDeUsuarioEspecifico"
                        asp-route-idUsuario="@Autorizacion.ObtenerIdUsuario(ViewContext.HttpContext)">Mostrar mis
                        Tablero</a>
                </li>
            }
            else if (Autorizacion.ObtenerRol(ViewContext.HttpContext) == "operador")
            {
                <li>
                    <a asp-controller="Tablero" asp-action="ListarTablerosDeUsuarioEspecifico"
                        asp-route-idUsuario="@Autorizacion.ObtenerIdUsuario(ViewContext.HttpContext)">Mostrar mis
                        Tablero</a>
                </li>
            }
        </ol>
    </div>
</body>

</html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Opciones de Tablero</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h2 class="text-center mt-3">Opciones de Tablero</h2>
        <div class="list-group mt-5">
            @if (Autorizacion.EsAdmin(ViewContext.HttpContext))
            {
                <a href="@Url.Action("AgregarTablero", "Tablero")" class="list-group-item list-group-item-action">Crear
                    Tablero</a>
                <a href="@Url.Action("MostrarTodosTablero", "Tablero")"
                    class="list-group-item list-group-item-action">Mostrar Todos los Tableros</a>
                <a href="@Url.Action("ListarTablerosDeUsuarioEspecifico", "Tablero", new { idUsuario = Autorizacion.ObtenerIdUsuario(ViewContext.HttpContext) })"
                    class="list-group-item list-group-item-action">Mostrar mis Tableros</a>
            }
            else if (Autorizacion.ObtenerRol(ViewContext.HttpContext) == "operador")
            {
                <a href="@Url.Action("ListarTablerosDeUsuarioEspecifico", "Tablero", new { idUsuario = Autorizacion.ObtenerIdUsuario(ViewContext.HttpContext) })"
                    class="list-group-item list-group-item-action">Mostrar mis Tableros</a>
            }
        </div>
    </div>
</body>

</html>
