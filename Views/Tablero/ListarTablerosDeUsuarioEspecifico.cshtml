@model List<Tablero>
@{
    ViewData["Title"] = "Tableros del Usuario";
}

<h1>Tableros del Usuario</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id Tablero</th>
            <th scope="col">Nombre de Tablero</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Opcion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model)
        {
            <tr>
                <th scope="row">
                    @tablero.IdTablero
                </th>
                <td>@tablero.NombreDeTablero</td>
                <td>@tablero.DescripcionDeTablero</td>
                <td>
                    <a asp-controller="Tarea" asp-action="Index" asp-route-id="@tablero.IdUsuarioPropietario">Ver
                        tareas</a>
                </td>
            </tr>
        }
    </tbody>
</table>
