<h1>Crear Nueva Tarea</h1>

<form class="row g-3 needs-validation" novalidate asp-controller="Tarea" asp-action="Crear" method="post">
    <div class="col-md-4">
        <label asp-for="NombreTarea" class="form-label">Nombre:</label>
        <input type="text" class="form-control" asp-for="NombreTarea" />
    </div>
    <div class="col-md-4">
        <label asp-for="DescripcionTarea" class="form-label">Descripci√≥n:</label>
        <input type="text" class="form-control" asp-for="DescripcionTarea"></textarea>
    </div>
