@model tl2_tp10_2023_VarelaJoseAlberto.ViewModels.ModificarTareaViewModel

<h1>Modificar Tarea</h1>
<h2>Confirmar Modificacion</h2>
<div>
    <p>Estás modificando la Tarea "@Model.NombreTarea"?</p>
</div>
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <form asp-controller="Tarea" asp-action="ConfirmarModificarTarea" method="post">

            <input type="hidden" asp-for="IdTarea" />

            <div class="mb-3">
                <label asp-for="NombreTarea" class="form-label">Nombre:</label>
                <input type="text" class="form-control" asp-for="NombreTarea" />
                <span asp-validation-for="NombreTarea" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DescripcionTarea" class="form-label">Descripción:</label>
                <input type="text" class="form-control" asp-for="DescripcionTarea"></textarea>
                <span asp-validation-for="DescripcionTarea" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EstadoTarea">Estado:</label>
                <select class="form-select" asp-for="EstadoTarea" asp-items="@Html.GetEnumSelectList<EstadoTarea>()">
                    <option selected disabled> ---Seleccionar---</option>
                </select>
                <span asp-validation-for="EstadoTarea" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ColorTarea" class="form-label">Color:</label>
                <input asp-for="ColorTarea" type="color" />
                <span asp-validation-for="ColorTarea" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="from-label" asp-for="IdTablero"> Seleccione el Tablero</label>
                <select class="from-select" asp-for="IdTablero">
                    <option selected disabled>---Seleccionar---</option>
                    @foreach (var tablero in Model.Tableros)
                    {
                        <option value="@tablero.IdTableroM">@tablero.NombreDeTableroM</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="IdUsuarioAsignado" class="form-label">ID Usuario Asignado:</label>
                <input type="number" class="form-control" asp-for="IdUsuarioAsignado" />
                <span asp-validation-for="IdUsuarioAsignado" class="text-danger"></span>
            </div>
            <button class="btn btn-success" type="submit">Guardar Cambios</button>
            <a asp-controller="Tarea" asp-action="Index" class="btn btn-danger">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}