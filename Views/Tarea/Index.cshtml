@model List<tl2_tp10_2023_VarelaJoseAlberto.Models.Tarea>

<div>
    <a asp-controller="Tarea" asp-action="Crear">Agregar Tareas</a>
</div>
<h1>Lista de Tareas</h1>

<table>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripci√≥n</th>
            <th scope="col">Estado</th>
            <th scope="col">Color</th>
            <th scope="col">Id Tablero</th>
            <th scope="col">Id Usuario Asignado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.IdTarea</td>
                <td>@tarea.NombreTarea</td>
                <td>@tarea.DescripcionTarea</td>
                <td>@tarea.EstadoTarea</td>
                <td><input type="color" value="@tarea.Color" disabled /></td>
                <td>@tarea.IdTablero</td>
                <td>
                    @if (tarea.IdUsuarioAsignado != null)
                    {
                        <span>@tarea.IdUsuarioAsignado</span>
                    }
                    else
                    {
                        <span>No Asignado</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
