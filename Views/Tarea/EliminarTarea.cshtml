@model tl2_tp10_2023_VarelaJoseAlberto.Models.Tarea

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminación Tarea</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h2 class="text-center mt-3">Confirmar Eliminación</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="mt-4">
                    <p class="lead">¿Estás seguro de que deseas eliminar la tarea
                        "@Model.NombreTareaM"?
                    </p>
                </div>
                <form asp-controller="Tarea" asp-action="ConfirmarEliminarTarea" method="post">
                    <input type="hidden" asp-for="@Model.IdTareaM" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Confirmar</button>
                        <a asp-controller="Tarea" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>