@model tl2_tp10_2023_VarelaJoseAlberto.Models.Tarea
@{
    ViewData["Title"] = "Confirmar Eliminación";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Confirmar Eliminación</h2>
            <div>
                <p>¿Estás seguro de que deseas eliminar la tarea <strong>"@Model.NombreTareaM"</strong>?</p>
            </div>
            <form asp-controller="Tarea" asp-action="ConfirmarEliminarTarea" method="post">
                <input type="hidden" asp-for="@Model.IdTareaM" />
                <div class="col-12">
                    <button type="submit" class="btn btn-danger">Confirmar</button>
                    <input asp-for="IdTableroM" type="hidden">
                    <a asp-controller="Tarea" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
